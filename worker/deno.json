{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --env-file=.env --watch src/main.ts",
    "start": "deno run --allow-net --allow-env --allow-read --env-file=.env src/main.ts",
    "test": "deno test --allow-net --allow-env --allow-read"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  }
}
